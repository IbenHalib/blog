<!DOCTYPE html>
<html >
<head>

    <title>{% block title %} bla{% endblock title %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    {% stylesheets '@bootstrap_css' combine=true %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
    {% javascripts '@jquery_js' '@bootstrap_js' filter='?yui_js' combine=true %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <link href="{{ asset('bootstrap_css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('bootstrap_js') }}" rel="stylesheet" media="screen">
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
    {% block script %}

    {% endblock script %}
</head>
<body >
<div class="container">
    {% block body %}

        <div class="container">
            <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
                <div class="container">

                    <div class="collapse navbar-collapse">
                        <ul class="nav nav-pills">
                            {% block navbar %}

                                {% include('VadimBlogBundle:PageContent:nav_menu.html.twig') %}

                            {% endblock navbar %}

                            <form  action="{{ path('_resultSearch' )}}" method="post" class="navbar-form navbar-right" >
                                {#<form>#}
                                {% block search %}
                                    {{ render(controller('VadimBlogBundle:PageContent:searchArticle',{})) }}
                                {% endblock search %}
                            </form>
                        </ul>
                    </div><!--/.navbar-collapse -->
                </div><!-- /.container -->
            </div><!-- /.navbar -->
        </div>

        <div class="container">
            <br>
            <br>
            <div class="row row-offcanvas row-offcanvas-right">

                <div class="col-xs-12 col-sm-9">

                    <div class="panel panel-default">
                        <div class="panel-body">
                            {% block page_content %}

                            {% endblock  page_content %}
                        </div>
                    </div><!--/span-->
                </div>
                <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">
                    <div class="list-group">
                        {% block panel %}

                        {% endblock panel %}
                    </div>
                </div><!--/span-->
            </div><!--/row-->

            <hr>

            <footer>
                {% block footer %}
                    <p>blog</p>
                {% endblock footer %}
            </footer>

        </div><!--/.container-->
    {% endblock body %}
</div>
</body>
</html>